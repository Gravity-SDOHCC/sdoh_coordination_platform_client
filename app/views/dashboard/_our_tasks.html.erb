<div class="tab-pane fade <%= "show active" if active %>" id="<%= id %>" role="tabpanel" aria-labelledby="<%= id %>-tab">

  <% if @active_cp_tasks.nil? && @completed_cp_tasks.nil? && @cancelled_cp_tasks.nil? %>
    <h5 class="text-muted text-center my-3"> There no requests yet</h5>
  <% else %>
    <div class="table-wrapper my-3 px-3 border-bottom">
      <div id="active-cp-tasks-table">
        <%= render "cp_tasks_table", referrals: @active_cp_tasks, type: "active" %>
      </div>
    </div>
    <div class="table-wrapper my-5 px-3 border-bottom">
      <div id="completed-cp-tasks-table">
        <%= render "cp_tasks_table", referrals: @completed_cp_tasks, type: "completed" %>
      </div>
    </div>
    <div class="table-wrapper mt-5 px-3 ">
      <div id="cancelled-cp-tasks-table">
        <%= render "cp_tasks_table", referrals: @cancelled_cp_tasks, type: "cancelled" %>
      </div>
    </div>
  <% end %>

</div>
